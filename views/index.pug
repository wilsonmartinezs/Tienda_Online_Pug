doctype html
header
  title Teinda en Linea
  link(rel='stylesheet',href='/css/estilos.css')
  link(rel='stylesheet',href='/css/carrito.css')
  

html
  body
    include menu.pug
    h4=user[0].rol+' : '+user[0].nombre
    main
      for rows in listado
        div(class='articulo')
          div(class='imagen')
            img(src='/img/'+rows.imagen)
          div(class='titulo')=rows.nombre_prod
          div(class='precio')=rows.precio_prod
            p='stock'+rows.stock
          a(href='/compra/registrar_compra/'+rows.id_producto,class='button') Agregar al Carrito
            

        
        
   

